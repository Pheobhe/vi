{% extends 'base.html.twig' %}

{% block title %}Usuarios
{% endblock %}

{% block headerBreadcrumb %}
<li class="breadcrumb-item"><a href='index.html'><i class="feather icon-home"></i></a></li>
<li class="breadcrumb-item"><a>Usuarios</a></li>
{% endblock headerBreadcrumb %}

{% block body %}
    <h1>Lista de Usuarios</h1>

    <table class="table">
        <thead>
        <div class="dt-responsive table-responsive">
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </div>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.Username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                 
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Ver</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Cambiar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('app_user_new') }}" class="btn btn-primary btn-descargar">Crear Usuario</a>
    {# <a href="{{ path('app_user_new') }}">Nuevo</a> #}
{% endblock %}

